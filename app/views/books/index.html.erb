
<h1>book list</h1>
<div>

<%= form_with(url: search_books_path, method: "get") do |form| %>
   <%= select_tag :genre_id, options_for_select(Genre.all.map{ |g| [g.name, g.id] }, params[:genre_id]), include_blank: true %>
  <%= form.text_field :query, placeholder: "Search..." %>
  <%= form.submit "Search" %>
<% end %>
</div>

<ul>
  <% @books.each do |book| %>
    <li><%= link_to book.title, book_path(book) %></li>
  <% end %>
</ul>
<%= paginate @books %>


